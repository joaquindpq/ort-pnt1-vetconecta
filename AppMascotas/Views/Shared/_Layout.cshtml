<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VetConecta</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/crud-views.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar-dropdown.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/user-dropdown.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/forms.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/smooth-hover.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AppMascotas.styles.css" asp-append-version="true" />
    <!-- Font Awesome para iconos -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Navbar superior naranja -->
    <nav class="navbar navbar-expand-lg navbar-vetconecta">
        <div class="container-fluid px-4">
            <!-- Logo y nombre -->
            <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.svg" alt="VetConecta Logo" class="navbar-logo" />
                <span class="navbar-title">VetConecta</span>
            </a>

            <!-- Botón hamburguesa para móviles -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menú de navegación -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Inicio</a>
                    </li>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="MiVeterinaria" asp-action="Index">Mi Veterinaria</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Duenos" asp-action="Index">Dueños</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Mascotas" asp-action="Index">Mascotas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Turnos" asp-action="Index">Turnos</a>
                        </li>
                    }
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Mapa" asp-action="Index">Mapa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contacto">Contacto</a>
                    </li>
                </ul>

                <!-- Iconos de la derecha -->
                <div class="d-flex align-items-center navbar-icons">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <!-- Dropdown de usuario autenticado -->
                        <div class="dropdown">
                            <button class="icon-btn dropdown-toggle" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false" title="Mi Cuenta">
                                <i class="fas fa-user"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li>
                                    <span class="dropdown-item-text">
                                        <i class="fas fa-clinic-medical me-2"></i>
                                        <strong>@User.Identity.Name</strong>
                                    </span>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        <button type="submit" class="dropdown-item">
                                            <i class="fas fa-sign-out-alt me-2"></i>Cerrar Sesión
                                        </button>
                                    </form>
                                </li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <!-- Botón para usuarios no autenticados -->
                        <a asp-controller="Account" asp-action="Login" class="icon-btn" title="Iniciar Sesión">
                            <i class="fas fa-user"></i>
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>

    <!-- Contenido principal -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer Moderno -->
    <footer class="footer-modern">
        <div class="container">
            <div class="footer-content">
                <div class="row justify-content-center">
                    <!-- Logo y descripción -->
                    <div class="col-lg-5 col-md-6 mb-4">
                        <div class="footer-brand">
                            <img src="~/images/logo-ort.png" alt="ORT Logo" class="footer-logo" />
                            <h3 class="footer-title">VetConecta</h3>
                            <p class="footer-description">
                                Sistema de gestión veterinaria moderno y eficiente para clínicas veterinarias.
                            </p>
                            <div class="footer-group-info">
                                <span class="group-badge-gold">PNT1 - Grupo 3</span>
                            </div>
                        </div>
                    </div>

                    <!-- Contacto -->
                    <div class="col-lg-3 col-md-6 mb-4">
                        <h4 class="footer-heading">Contacto</h4>
                        <ul class="footer-contact">
                            <li>
                                <i class="fas fa-envelope"></i>
                                <span>info@vetconecta.com</span>
                            </li>
                            <li>
                                <i class="fas fa-phone"></i>
                                <span>+598 1234 5678</span>
                            </li>
                        </ul>
                    </div>

                    <!-- Redes sociales -->
                    <div class="col-lg-3 col-md-6 mb-4">
                        <h4 class="footer-heading">Síguenos</h4>
                        <div class="footer-social">
                            <a href="#" class="social-link" title="Facebook">
                                <i class="fab fa-facebook-f"></i>
                            </a>
                            <a href="#" class="social-link" title="Instagram">
                                <i class="fab fa-instagram"></i>
                            </a>
                            <a href="#" class="social-link" title="Twitter">
                                <i class="fab fa-twitter"></i>
                            </a>
                            <a href="#" class="social-link" title="LinkedIn">
                                <i class="fab fa-linkedin-in"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Footer bottom -->
            <div class="footer-bottom">
                <div class="row align-items-center justify-content-center">
                    <div class="col-auto">
                        <p class="footer-copyright">
                            &copy; 2025 VetConecta. Todos los derechos reservados.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
