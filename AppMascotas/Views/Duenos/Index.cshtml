@model IEnumerable<AppMascotas.Models.Dueno>

@{
    ViewData["Title"] = "Gestión de Dueños";
}

<div class="container mt-4 mb-5">
    <!-- Header con diseño moderno color footer -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm header-gradient-primary">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <div class="header-icon-circle">
                                <i class="fas fa-users"></i>
                            </div>
                            <div>
                                <h1 class="text-white mb-2 fw-bold">Gestión de Dueños</h1>
                                <p class="text-white mb-0 header-subtitle">
                                    Administra la información de los propietarios de mascotas
                                </p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Create" class="btn btn-light btn-lg shadow-sm btn-pill">
                                <i class="fas fa-user-plus me-2"></i>Nuevo Dueño
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm mb-4 alert-no-border" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Buscador -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm card-rounded-custom">
                <div class="card-body p-4">
                    <form asp-action="Index" method="get">
                        <div class="row g-3 align-items-end">
                            <div class="col-md-9">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-search me-2 text-primary"></i>Buscar dueño
                                </label>
                                <input type="text" 
                                       name="searchString" 
                                       value="@ViewData["CurrentFilter"]" 
                                       class="form-control form-control-lg form-control-lg-custom" 
                                       placeholder="Buscar por nombre del dueño..." />
                            </div>
                            <div class="col-md-3">
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-primary flex-fill btn-pill btn-search-height">
                                        <i class="fas fa-search me-2"></i>Buscar
                                    </button>
                                    <a asp-action="Index" class="btn btn-outline-secondary flex-fill btn-pill btn-search-height">
                                        <i class="fas fa-redo me-2"></i>Limpiar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de Dueños -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm card-rounded-custom">
                <div class="card-body p-4">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead class="table-header-gradient">
                                    <tr>
                                        <th class="py-3">
                                            <i class="fas fa-user"></i> @Html.DisplayNameFor(model => model.NombreCompleto)
                                        </th>
                                        <th class="py-3">
                                            <i class="fas fa-id-card"></i> @Html.DisplayNameFor(model => model.Dni)
                                        </th>
                                        <th class="py-3">
                                            <i class="fas fa-phone"></i> @Html.DisplayNameFor(model => model.Telefono)
                                        </th>
                                        <th class="py-3">
                                            <i class="fas fa-envelope"></i> @Html.DisplayNameFor(model => model.Email)
                                        </th>
                                        <th class="py-3">
                                            <i class="fas fa-map-marker-alt"></i> @Html.DisplayNameFor(model => model.Direccion)
                                        </th>
                                        <th class="py-3">
                                            <i class="fas fa-paw"></i> Mascotas
                                        </th>
                                        <th class="py-3 text-center">
                                            <i class="fas fa-cog"></i> Acciones
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="py-3">
                                                <div class="d-flex align-items-center">
                                                    <div class="avatar-circle">
                                                        <span class="text-white fw-bold">@item.NombreCompleto.Substring(0, 1).ToUpper()</span>
                                                    </div>
                                                    <span class="fw-semibold">@item.NombreCompleto</span>
                                                </div>
                                            </td>
                                            <td class="py-3">
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-id-card text-primary me-2"></i>
                                                    <span>@item.Dni</span>
                                                </div>
                                            </td>
                                            <td class="py-3">
                                                <div class="d-flex align-items-center">
                                                    <i class="fas fa-phone-alt text-success me-2"></i>
                                                    <span>@item.Telefono</span>
                                                </div>
                                            </td>
                                            <td class="py-3">
                                                @if (!string.IsNullOrEmpty(item.Email))
                                                {
                                                    <div class="d-flex align-items-center">
                                                        <i class="fas fa-envelope text-info me-2"></i>
                                                        <span>@item.Email</span>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td class="py-3">
                                                @if (!string.IsNullOrEmpty(item.Direccion))
                                                {
                                                    <div class="d-flex align-items-center">
                                                        <i class="fas fa-map-marker-alt text-danger me-2"></i>
                                                        <span>@item.Direccion</span>
                                                    </div>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td class="py-3">
                                                <span class="badge bg-primary badge-count">
                                                    <i class="fas fa-paw me-1"></i>@item.Mascotas.Count
                                                </span>
                                            </td>
                                            <td class="py-3 text-center">
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" 
                                                       class="btn btn-sm btn-outline-info btn-sm-outline-custom btn-rounded-left"
                                                       title="Ver detalles">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id" 
                                                       class="btn btn-sm btn-outline-warning btn-sm-outline-custom"
                                                       title="Editar">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id" 
                                                       class="btn btn-sm btn-outline-danger btn-sm-outline-custom btn-rounded-right"
                                                       title="Eliminar">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="mt-3">
                            <div class="alert alert-light border-0 shadow-sm alert-no-border">
                                <i class="fas fa-info-circle me-2 text-primary"></i>
                                @if (ViewData["CurrentFilter"] != null)
                                {
                                    <span>Mostrando <strong>@Model.Count()</strong> resultado(s) de la búsqueda</span>
                                }
                                else
                                {
                                    <span>Total de dueños registrados: <strong>@Model.Count()</strong></span>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="placeholder-circle-large">
                                <i class="fas fa-users placeholder-icon-large"></i>
                            </div>
                            <h4 class="text-muted mb-3">
                                @if (ViewData["CurrentFilter"] != null)
                                {
                                    <span>No se encontraron dueños</span>
                                }
                                else
                                {
                                    <span>No hay dueños registrados</span>
                                }
                            </h4>
                            <p class="text-muted mb-4">
                                @if (ViewData["CurrentFilter"] != null)
                                {
                                    <span>No hay resultados para tu búsqueda. Intenta con otros criterios.</span>
                                }
                                else
                                {
                                    <span>Comienza agregando el primer dueño al sistema.</span>
                                }
                            </p>
                            <a asp-action="Create" class="btn btn-primary btn-lg btn-pill">
                                <i class="fas fa-user-plus me-2"></i>Agregar Primer Dueño
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
