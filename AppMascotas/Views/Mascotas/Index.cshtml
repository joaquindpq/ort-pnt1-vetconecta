@model IEnumerable<AppMascotas.Models.Mascota>
@{
    ViewData["Title"] = "Mascotas";
}

<div class="container mt-4 mb-5 container-padding-bottom">
    <!-- Header con diseño moderno color footer -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm header-gradient-primary">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <div class="header-icon-circle">
                                <i class="fas fa-paw"></i>
                            </div>
                            <div>
                                <h1 class="text-white mb-2 fw-bold">Gestión de Mascotas</h1>
                                <p class="text-white mb-0 header-subtitle">
                                    Administra las mascotas registradas en tu veterinaria
                                </p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Create" class="btn btn-light btn-lg shadow-sm btn-pill">
                                <i class="fas fa-plus me-2"></i>Nueva Mascota
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm mb-4 alert-no-border" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Buscador -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm card-rounded-custom">
                <div class="card-body p-4">
                    <form asp-action="Index" method="get">
                        <div class="row g-3 align-items-end">
                            <div class="col-md-9">
                                <label class="form-label fw-semibold">
                                    <i class="fas fa-search me-2 text-success"></i>Buscar mascota
                                </label>
                                <input type="text" 
                                       name="searchString" 
                                       value="@ViewData["CurrentFilter"]" 
                                       class="form-control form-control-lg form-control-lg-custom" 
                                       placeholder="Buscar por nombre, especie, raza o dueño..." />
                            </div>
                            <div class="col-md-3">
                                <div class="d-flex gap-2">
                                    <button type="submit" class="btn btn-success flex-fill btn-pill btn-search-height">
                                        <i class="fas fa-search me-2"></i>Buscar
                                    </button>
                                    <a asp-action="Index" class="btn btn-outline-secondary flex-fill btn-pill btn-search-height">
                                        <i class="fas fa-redo me-2"></i>Limpiar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm card-rounded-custom">
                    <div class="card-body p-5">
                        <div class="text-center py-5">
                            <div class="placeholder-circle-large">
                                <i class="fas fa-paw placeholder-icon-large"></i>
                            </div>
                            <h4 class="text-muted mb-3">
                                @if (ViewData["CurrentFilter"] != null)
                                {
                                    <span>No se encontraron mascotas</span>
                                }
                                else
                                {
                                    <span>No hay mascotas registradas</span>
                                }
                            </h4>
                            <p class="text-muted mb-4">
                                @if (ViewData["CurrentFilter"] != null)
                                {
                                    <span>No hay resultados para tu búsqueda. Intenta con otros criterios.</span>
                                }
                                else
                                {
                                    <span>Comienza agregando la primera mascota al sistema.</span>
                                }
                            </p>
                            <a asp-action="Create" class="btn btn-success btn-lg btn-pill">
                                <i class="fas fa-plus me-2"></i>Agregar Primera Mascota
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-6 col-lg-4 mb-4">
                    <div class="card h-100 border-0 shadow-sm pet-card-light card-hover-effect">
                        <div class="card-body p-4">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h5 class="card-title mb-0 fw-bold">
                                    <i class="fas fa-paw text-success me-2"></i>
                                    @Html.DisplayFor(modelItem => item.Nombre)
                                </h5>
                                @if (item.Sexo != null)
                                {
                                    <span class="@(item.Sexo.ToLower() == "macho" ? "badge-sex-male" : "badge-sex-female")">
                                        <i class="fas fa-@(item.Sexo.ToLower() == "macho" ? "mars" : "venus")"></i>
                                    </span>
                                }
                            </div>

                            <div class="mb-2">
                                <small class="text-muted fw-semibold">
                                    <i class="fas fa-tag me-1"></i>Especie:
                                </small>
                                <strong>@Html.DisplayFor(modelItem => item.Especie)</strong>
                            </div>

                            @if (!string.IsNullOrEmpty(item.Raza))
                            {
                                <div class="mb-2">
                                    <small class="text-muted fw-semibold">
                                        <i class="fas fa-dna me-1"></i>Raza:
                                    </small>
                                    @Html.DisplayFor(modelItem => item.Raza)
                                </div>
                            }

                            <div class="mb-2">
                                <small class="text-muted fw-semibold">
                                    <i class="fas fa-user me-1"></i>Dueño:
                                </small>
                                <a asp-controller="Duenos" asp-action="Details" asp-route-id="@item.DuenoId" 
                                   class="text-decoration-none fw-semibold text-link-primary">
                                    @Html.DisplayFor(modelItem => item.Dueno.NombreCompleto)
                                </a>
                            </div>

                            @if (item.FechaNacimiento.HasValue)
                            {
                                <div class="mb-2">
                                    <small class="text-muted fw-semibold">
                                        <i class="fas fa-birthday-cake me-1"></i>Edad:
                                    </small>
                                    @{
                                        var edad = (DateTime.Now - item.FechaNacimiento.Value).Days / 365;
                                        var meses = ((DateTime.Now - item.FechaNacimiento.Value).Days % 365) / 30;
                                    }
                                    @edad año(s)
                                    @if (meses > 0)
                                    {
                                        <span>, @meses mes(es)</span>
                                    }
                                </div>
                            }

                            @if (item.Peso.HasValue)
                            {
                                <div class="mb-3">
                                    <small class="text-muted fw-semibold">
                                        <i class="fas fa-weight me-1"></i>Peso:
                                    </small>
                                    @Html.DisplayFor(modelItem => item.Peso) kg
                                </div>
                            }

                            <div class="d-grid gap-2 mt-3">
                                <a asp-action="Details" asp-route-id="@item.Id" 
                                   class="btn btn-outline-info btn-rounded-detail">
                                    <i class="fas fa-eye me-1"></i>Ver Detalles
                                </a>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" 
                                       class="btn btn-outline-warning btn-sm-outline-custom btn-rounded-left">
                                        <i class="fas fa-edit me-1"></i>Editar
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" 
                                       class="btn btn-outline-danger btn-sm-outline-custom btn-rounded-right">
                                        <i class="fas fa-trash me-1"></i>Eliminar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="mt-3">
            <div class="alert alert-light border-0 shadow-sm alert-no-border">
                <i class="fas fa-info-circle me-2 text-primary"></i>
                @if (ViewData["CurrentFilter"] != null)
                {
                    <span>Mostrando <strong>@Model.Count()</strong> resultado(s) de la búsqueda</span>
                }
                else
                {
                    <span>Total de mascotas registradas: <strong>@Model.Count()</strong></span>
                }
            </div>
        </div>
    }
</div>
