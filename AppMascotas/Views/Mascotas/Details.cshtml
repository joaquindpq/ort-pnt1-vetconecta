@model AppMascotas.Models.Mascota

@{
    ViewData["Title"] = "Detalles de la Mascota";
}

<div class="container mt-4 mb-5 container-padding-bottom">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm header-gradient-primary">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center justify-content-between flex-wrap">
                        <div class="d-flex align-items-center">
                            <div class="header-icon-circle">
                                <i class="fas fa-paw"></i>
                            </div>
                            <div>
                                <h1 class="text-white mb-1 fw-bold">@Model.Nombre</h1>
                                <p class="text-white mb-0 header-subtitle">Información completa de la mascota</p>
                            </div>
                        </div>
                        <div class="mt-3 mt-md-0">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg text-white me-2 btn-pill">
                                <i class="fas fa-edit me-2"></i>Editar
                            </a>
                            <a asp-action="Index" class="btn btn-light btn-lg btn-pill">
                                <i class="fas fa-arrow-left me-2"></i>Volver
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Información Básica -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm h-100 card-rounded-custom">
                <div class="card-header card-header-green">
                    <h5 class="text-white mb-0 fw-bold">
                        <i class="fas fa-info-circle me-2"></i>Información Básica
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="details-box-light">
                                <small class="text-muted d-block mb-1 fw-semibold">
                                    <i class="fas fa-paw text-success me-2"></i>@Html.DisplayNameFor(model => model.Nombre)
                                </small>
                                <h5 class="mb-0 fw-bold">@Model.Nombre</h5>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="details-box-light">
                                <small class="text-muted d-block mb-1 fw-semibold">
                                    <i class="fas fa-tag text-info me-2"></i>@Html.DisplayNameFor(model => model.Especie)
                                </small>
                                <h6 class="mb-0">@Model.Especie</h6>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Raza))
                        {
                            <div class="col-md-6">
                                <div class="details-box-light">
                                    <small class="text-muted d-block mb-1 fw-semibold">
                                        <i class="fas fa-dna text-warning me-2"></i>@Html.DisplayNameFor(model => model.Raza)
                                    </small>
                                    <h6 class="mb-0">@Model.Raza</h6>
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Sexo))
                        {
                            <div class="col-md-6">
                                <div class="details-box-light">
                                    <small class="text-muted d-block mb-1 fw-semibold">
                                        <i class="fas fa-venus-mars text-danger me-2"></i>@Html.DisplayNameFor(model => model.Sexo)
                                    </small>
                                    <h6 class="mb-0">
                                        <span class="@(Model.Sexo.ToLower() == "macho" ? "badge-sex-male" : "badge-sex-female")">
                                            <i class="fas fa-@(Model.Sexo.ToLower() == "macho" ? "mars" : "venus") me-1"></i>@Model.Sexo
                                        </span>
                                    </h6>
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Color))
                        {
                            <div class="col-md-6">
                                <div class="details-box-light">
                                    <small class="text-muted d-block mb-1 fw-semibold">
                                        <i class="fas fa-palette text-info me-2"></i>@Html.DisplayNameFor(model => model.Color)
                                    </small>
                                    <h6 class="mb-0">@Model.Color</h6>
                                </div>
                            </div>
                        }

                        @if (Model.FechaNacimiento.HasValue)
                        {
                            <div class="col-md-6">
                                <div class="details-box-light">
                                    <small class="text-muted d-block mb-1 fw-semibold">
                                        <i class="fas fa-birthday-cake text-primary me-2"></i>@Html.DisplayNameFor(model => model.FechaNacimiento)
                                    </small>
                                    <h6 class="mb-0">@Model.FechaNacimiento.Value.ToString("dd/MM/yyyy")</h6>
                                    <small class="text-muted">
                                        @{
                                            var edad = (DateTime.Now - Model.FechaNacimiento.Value).Days / 365;
                                            var meses = ((DateTime.Now - Model.FechaNacimiento.Value).Days % 365) / 30;
                                        }
                                        (@edad a?o(s) @if (meses > 0) { <span>, @meses mes(es)</span> })
                                    </small>
                                </div>
                            </div>
                        }

                        @if (Model.Peso.HasValue)
                        {
                            <div class="col-md-6">
                                <div class="details-box-light">
                                    <small class="text-muted d-block mb-1 fw-semibold">
                                        <i class="fas fa-weight text-success me-2"></i>@Html.DisplayNameFor(model => model.Peso)
                                    </small>
                                    <h6 class="mb-0">@Model.Peso kg</h6>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Información del Dueño -->
        <div class="col-lg-6 mb-4">
            <div class="card border-0 shadow-sm h-100 card-rounded-custom">
                <div class="card-header card-header-blue">
                    <h5 class="text-white mb-0 fw-bold">
                        <i class="fas fa-user me-2"></i>Información del Dueño
                    </h5>
                </div>
                <div class="card-body p-4">
                    <div class="row g-3">
                        <div class="col-12">
                            <div class="details-box-light">
                                <small class="text-muted d-block mb-1 fw-semibold">
                                    <i class="fas fa-user text-primary me-2"></i>Nombre Completo
                                </small>
                                <h5 class="mb-0 fw-bold">
                                    <a asp-controller="Duenos" asp-action="Details" asp-route-id="@Model.DuenoId" 
                                       class="text-decoration-none text-link-primary">
                                        @Model.Dueno?.NombreCompleto
                                    </a>
                                </h5>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(Model.Dueno?.Telefono))
                        {
                            <div class="col-12">
                                <div class="details-box-light">
                                    <small class="text-muted d-block mb-1 fw-semibold">
                                        <i class="fas fa-phone text-success me-2"></i>Tel?fono
                                    </small>
                                    <h6 class="mb-0">
                                        <a href="tel:@Model.Dueno.Telefono" class="text-decoration-none text-dark">
                                            @Model.Dueno.Telefono
                                        </a>
                                    </h6>
                                </div>
                            </div>
                        }

                        @if (!string.IsNullOrEmpty(Model.Dueno?.Email))
                        {
                            <div class="col-12">
                                <div class="details-box-light">
                                    <small class="text-muted d-block mb-1 fw-semibold">
                                        <i class="fas fa-envelope text-warning me-2"></i>Email
                                    </small>
                                    <h6 class="mb-0">
                                        <a href="mailto:@Model.Dueno.Email" class="text-decoration-none text-dark">
                                            @Model.Dueno.Email
                                        </a>
                                    </h6>
                                </div>
                            </div>
                        }

                        <div class="col-12">
                            <a asp-controller="Duenos" asp-action="Details" asp-route-id="@Model.DuenoId" 
                               class="btn btn-outline-primary w-100 btn-rounded-detail">
                                <i class="fas fa-eye me-2"></i>Ver Perfil Completo
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Observaciones -->
        @if (!string.IsNullOrEmpty(Model.Observaciones))
        {
            <div class="col-12 mb-4">
                <div class="card border-0 shadow-sm card-rounded-custom">
                    <div class="card-header card-header-yellow">
                        <h5 class="text-white mb-0 fw-bold">
                            <i class="fas fa-notes-medical me-2"></i>Observaciones Médicas
                        </h5>
                    </div>
                    <div class="card-body p-4">
                        <p class="mb-0 text-preline">@Model.Observaciones</p>
                    </div>
                </div>
            </div>
        }

        <!-- Turnos de la Mascota -->
        <div class="col-12">
            <div class="card border-0 shadow-sm card-rounded-custom">
                <div class="card-header card-header-teal">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="text-white mb-0 fw-bold">
                            <i class="fas fa-calendar-alt me-2"></i>Historial de Turnos
                        </h5>
                        <span class="badge bg-light text-dark badge-count">
                            Total: @Model.Turnos.Count
                        </span>
                    </div>
                </div>
                <div class="card-body p-4">
                    @if (Model.Turnos.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th><i class="fas fa-calendar me-2"></i>Fecha</th>
                                        <th><i class="fas fa-clock me-2"></i>Hora</th>
                                        <th><i class="fas fa-stethoscope me-2"></i>Motivo</th>
                                        <th><i class="fas fa-info-circle me-2"></i>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var turno in Model.Turnos.OrderByDescending(t => t.FechaHora))
                                    {
                                        <tr>
                                            <td>@turno.FechaHora.ToString("dd/MM/yyyy")</td>
                                            <td>@turno.FechaHora.ToString("HH:mm")</td>
                                            <td>@turno.Motivo</td>
                                            <td>
                                                <span class="badge @(turno.Estado == "Pendiente" ? "bg-warning" : turno.Estado == "Realizado" ? "bg-success" : "bg-danger") badge-count">
                                                    @turno.Estado
                                                </span>
                                            </td>
                                            <td>
                                                <a asp-controller="Turnos" asp-action="Details" asp-route-id="@turno.Id" 
                                                   class="btn btn-sm btn-outline-info btn-sm-outline-custom" title="Ver turno">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-calendar-times placeholder-icon-large"></i>
                            <p class="text-muted mt-3 mb-0">Esta mascota no tiene turnos registrados a?n.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Botones de acci?n -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm card-rounded-custom">
                <div class="card-body p-3">
                    <div class="d-flex gap-2 justify-content-end flex-wrap">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-rounded-outline">
                            <i class="fas fa-list me-2"></i>Volver al Listado
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning text-white btn-edit-custom">
                            <i class="fas fa-edit me-2"></i>Editar Informaci?n
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger btn-delete-custom">
                            <i class="fas fa-trash me-2"></i>Eliminar Mascota
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
