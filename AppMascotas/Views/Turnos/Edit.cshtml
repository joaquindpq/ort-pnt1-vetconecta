@model AppMascotas.Models.Turno

@{
    ViewData["Title"] = "Editar Turno";
}

<div class="container mt-4 mb-5">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm header-gradient-primary">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div>
                            <h1 class="text-white mb-1 fw-bold">Editar Turno</h1>
                            <p class="text-white mb-0 header-subtitle">Modifique los datos del turno</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Formulario -->
    <div class="row">
        <div class="col-lg-12 mx-auto">
            <div class="card border-0 shadow-sm card-rounded-custom">
                <div class="card-body p-4 p-md-5 edit-form">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-dismissible fade show card-rounded-custom" role="alert">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Por favor corrija los siguientes errores:</strong>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>

                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="FechaCreacion" />
                        <input type="hidden" asp-for="VeterinariaId" />

                        <div class="row g-4">
                            <!-- Mascota -->
                            <div class="col-12">
                                <label asp-for="MascotaId" class="form-label fw-semibold">
                                    <i class="fas fa-paw text-success me-2"></i>@Html.DisplayNameFor(model => model.MascotaId)
                                </label>
                                <select asp-for="MascotaId" class="form-select form-select-lg form-control-lg-custom" asp-items="ViewBag.MascotaId">
                                    <option value="">-- Seleccione una mascota --</option>
                                </select>
                                <span asp-validation-for="MascotaId" class="text-danger"></span>
                            </div>

                            <!-- Fecha y Hora -->
                            <div class="col-md-6">
                                <label asp-for="FechaHora" class="form-label fw-semibold">
                                    <i class="fas fa-calendar-alt text-primary me-2"></i>@Html.DisplayNameFor(model => model.FechaHora)
                                </label>
                                <input asp-for="FechaHora" type="datetime-local" class="form-control form-control-lg form-control-lg-custom" />
                                <span asp-validation-for="FechaHora" class="text-danger"></span>
                            </div>

                            <!-- Estado -->
                            <div class="col-md-6">
                                <label asp-for="Estado" class="form-label fw-semibold">
                                    <i class="fas fa-info-circle text-warning me-2"></i>@Html.DisplayNameFor(model => model.Estado)
                                </label>
                                <select asp-for="Estado" class="form-select form-select-lg form-control-lg-custom">
                                    <option value="Pendiente">Pendiente</option>
                                    <option value="Realizado">Realizado</option>
                                    <option value="Cancelado">Cancelado</option>
                                </select>
                                <span asp-validation-for="Estado" class="text-danger"></span>
                            </div>

                            <!-- Motivo -->
                            <div class="col-12">
                                <label asp-for="Motivo" class="form-label fw-semibold">
                                    <i class="fas fa-stethoscope text-info me-2"></i>@Html.DisplayNameFor(model => model.Motivo)
                                </label>
                                <input asp-for="Motivo" class="form-control form-control-lg form-control-lg-custom" placeholder="Ej: Consulta general, Vacunación, etc." />
                                <span asp-validation-for="Motivo" class="text-danger"></span>
                            </div>

                            <!-- Observaciones -->
                            <div class="col-12">
                                <label asp-for="Observaciones" class="form-label fw-semibold">
                                    <i class="fas fa-notes-medical text-warning me-2"></i>@Html.DisplayNameFor(model => model.Observaciones)
                                </label>
                                <textarea asp-for="Observaciones" class="form-control form-control-lg form-textarea-custom" rows="4" placeholder="Información adicional sobre la consulta"></textarea>
                                <span asp-validation-for="Observaciones" class="text-danger"></span>
                            </div>

                            <!-- Info de registro -->
                            <div class="col-12">
                                <div class="alert alert-info card-rounded-custom alert-no-border">
                                    <i class="fas fa-info-circle me-2"></i>
                                    <strong>Fecha de creación:</strong> @Model.FechaCreacion.ToString("dd/MM/yyyy HH:mm")
                                </div>
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex gap-3 justify-content-end">
                                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg btn-rounded-outline">
                                        <i class="fas fa-times me-2"></i>Cancelar
                                    </a>
                                    <button type="submit" class="btn btn-warning btn-lg text-white btn-rounded-custom">
                                        <i class="fas fa-save me-2"></i>Guardar Cambios
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
