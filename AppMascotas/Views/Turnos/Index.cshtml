@model IEnumerable<AppMascotas.Models.Turno>
@{
    ViewData["Title"] = "Gestión de Turnos";
}

@section Styles {
    <!-- FullCalendar CSS -->
    <link href='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.css' rel='stylesheet' />
}

<div class="container mt-4 mb-5 container-padding-bottom">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm header-gradient-primary">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <div class="header-icon-circle">
                                <i class="fas fa-calendar-alt"></i>
                            </div>
                            <div>
                                <h1 class="text-white mb-2 fw-bold">Gestión de Turnos</h1>
                                <p class="text-white mb-0 header-subtitle">
                                    Administra las citas y consultas de tu veterinaria
                                </p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Create" class="btn btn-light btn-lg shadow-sm btn-pill">
                                <i class="fas fa-plus me-2"></i>Nuevo Turno
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm mb-4 alert-no-border" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- View Toggle Buttons -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm card-rounded-custom">
                <div class="card-body p-3">
                    <div class="btn-group w-100" role="group">
                        <button type="button" id="btnCalendarView" class="btn btn-primary btn-lg btn-split-left btn-pill">
                            <i class="fas fa-calendar me-2"></i>Vista Calendario
                        </button>
                        <button type="button" id="btnListView" class="btn btn-outline-primary btn-lg btn-split-right btn-pill">
                            <i class="fas fa-list me-2"></i>Vista Lista
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Calendar View -->
    <div id="calendarView" class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm card-rounded-custom">
                <div class="card-body p-4">
                    <div id="calendar"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- List View -->
    <div id="listView" class="row d-none">
        <!-- Filtros -->
        <div class="col-12 mb-4">
            <div class="card border-0 shadow-sm card-rounded-custom">
                <div class="card-body p-4">
                    <div class="btn-group w-100" role="group">
                        <button type="button" class="btn btn-outline-primary btn-lg filter-btn btn-split-left" data-filter="">
                            <i class="fas fa-list me-2"></i>Todos
                        </button>
                        <button type="button" class="btn btn-outline-warning btn-lg filter-btn" data-filter="Pendiente">
                            <i class="fas fa-clock me-2"></i>Pendientes
                        </button>
                        <button type="button" class="btn btn-outline-success btn-lg filter-btn" data-filter="Realizado">
                            <i class="fas fa-check-circle me-2"></i>Realizados
                        </button>
                        <button type="button" class="btn btn-outline-danger btn-lg filter-btn btn-split-right" data-filter="Cancelado">
                            <i class="fas fa-times-circle me-2"></i>Cancelados
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Lista de Turnos -->
        <div class="col-12">
            <div class="card border-0 shadow-sm card-rounded-custom">
                <div class="card-body p-4">
                    <div id="turnosList">
                        @if (Model.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover align-middle" id="turnosTable">
                                    <thead class="table-header-gradient">
                                        <tr>
                                            <th class="py-3">
                                                <i class="fas fa-calendar me-2"></i>Fecha/Hora
                                            </th>
                                            <th class="py-3">
                                                <i class="fas fa-paw me-2"></i>Mascota
                                            </th>
                                            <th class="py-3">
                                                <i class="fas fa-user me-2"></i>Dueño
                                            </th>
                                            <th class="py-3">
                                                <i class="fas fa-stethoscope me-2"></i>Motivo
                                            </th>
                                            <th class="py-3">
                                                <i class="fas fa-info-circle me-2"></i>Estado
                                            </th>
                                            <th class="py-3 text-center">
                                                <i class="fas fa-cog me-2"></i>Acciones
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr class="turno-row turno-row-transition" data-estado="@item.Estado">
                                                <td class="py-3">
                                                    <div>
                                                        <strong class="d-block">@item.FechaHora.ToString("dd/MM/yyyy")</strong>
                                                        <small class="text-muted">
                                                            <i class="fas fa-clock me-1"></i>@item.FechaHora.ToString("HH:mm")
                                                        </small>
                                                    </div>
                                                </td>
                                                <td class="py-3">
                                                    <i class="fas fa-paw text-success me-2"></i>
                                                    <strong>@item.Mascota?.Nombre</strong>
                                                    <br>
                                                    <small class="text-muted">@item.Mascota?.Especie</small>
                                                </td>
                                                <td class="py-3">
                                                    <i class="fas fa-user text-primary me-2"></i>
                                                    @item.Mascota?.Dueno?.NombreCompleto
                                                </td>
                                                <td class="py-3">
                                                    @item.Motivo
                                                </td>
                                                <td class="py-3">
                                                    @switch (item.Estado)
                                                    {
                                                        case "Pendiente":
                                                            <span class="badge badge-estado badge-estado-warning">
                                                                <i class="fas fa-clock me-1"></i>Pendiente
                                                            </span>
                                                            break;
                                                        case "Realizado":
                                                            <span class="badge badge-estado badge-estado-success">
                                                                <i class="fas fa-check-circle me-1"></i>Realizado
                                                            </span>
                                                            break;
                                                        case "Cancelado":
                                                            <span class="badge badge-estado badge-estado-danger">
                                                                <i class="fas fa-times-circle me-1"></i>Cancelado
                                                            </span>
                                                            break;
                                                    }
                                                </td>
                                                <td class="py-3 text-center">
                                                    <div class="btn-group" role="group">
                                                        <a asp-action="Details" asp-route-id="@item.Id" 
                                                           class="btn btn-sm btn-outline-info btn-rounded-left" 
                                                           title="Ver detalles">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a asp-action="Edit" asp-route-id="@item.Id" 
                                                           class="btn btn-sm btn-outline-warning btn-rounded-middle" 
                                                           title="Editar">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a asp-action="Delete" asp-route-id="@item.Id" 
                                                           class="btn btn-sm btn-outline-danger btn-rounded-right" 
                                                           title="Eliminar">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="mt-3">
                                <div class="alert alert-light border-0 shadow-sm alert-no-border">
                                    <i class="fas fa-info-circle me-2 text-primary"></i>
                                    <span id="listCountInfo">Total de turnos: <strong>@Model.Count()</strong></span>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <div class="placeholder-circle-large">
                                    <i class="fas fa-calendar-times placeholder-icon-large"></i>
                                </div>
                                <h4 class="text-muted mb-3">No hay turnos registrados</h4>
                                <p class="text-muted mb-4">Comienza agregando el primer turno al sistema.</p>
                                <a asp-action="Create" class="btn btn-primary btn-lg btn-pill">
                                    <i class="fas fa-plus me-2"></i>Agregar Primer Turno
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- FullCalendar JS -->
    <script src='https://cdn.jsdelivr.net/npm/fullcalendar@6.1.10/index.global.min.js'></script>
    <script src='https://cdn.jsdelivr.net/npm/@@fullcalendar/core@6.1.10/locales/es.global.min.js'></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'es',
                headerToolbar: {
                    left: 'prev,next today',
                    center: 'title',
                    right: 'dayGridMonth,timeGridWeek,timeGridDay'
                },
                buttonText: {
                    today: 'Hoy',
                    month: 'Mes',
                    week: 'Semana',
                    day: 'Día'
                },
                events: '@Url.Action("GetTurnosJson")',
                eventClick: function(info) {
                    var turnoId = info.event.id;
                    window.location.href = '@Url.Action("Details")/' + turnoId;
                },
                eventDidMount: function(info) {
                    info.el.style.cursor = 'pointer';
                }
            });
            calendar.render();

            // Toggle between views
            const btnCalendarView = document.getElementById('btnCalendarView');
            const btnListView = document.getElementById('btnListView');
            const calendarView = document.getElementById('calendarView');
            const listView = document.getElementById('listView');

            btnCalendarView.addEventListener('click', function() {
                calendarView.classList.remove('d-none');
                listView.classList.add('d-none');
                btnCalendarView.classList.remove('btn-outline-primary');
                btnCalendarView.classList.add('btn-primary');
                btnListView.classList.remove('btn-primary');
                btnListView.classList.add('btn-outline-primary');
                calendar.updateSize();
            });

            btnListView.addEventListener('click', function() {
                calendarView.classList.add('d-none');
                listView.classList.remove('d-none');
                btnCalendarView.classList.remove('btn-primary');
                btnCalendarView.classList.add('btn-outline-primary');
                btnListView.classList.remove('btn-outline-primary');
                btnListView.classList.add('btn-primary');
            });

            // Filter functionality for list view
            const filterButtons = document.querySelectorAll('.filter-btn');
            const turnoRows = document.querySelectorAll('.turno-row');
            const listCountInfo = document.getElementById('listCountInfo');

            filterButtons.forEach(btn => {
                btn.addEventListener('click', function() {
                    const filter = this.getAttribute('data-filter');
                    
                    // Update active button
                    filterButtons.forEach(b => {
                        b.classList.remove('btn-primary', 'btn-warning', 'btn-success', 'btn-danger');
                        b.classList.add('btn-outline-' + (b === this ? getButtonColor(filter) : getOriginalColor(b)));
                    });
                    this.classList.remove('btn-outline-' + getButtonColor(filter));
                    this.classList.add('btn-' + getButtonColor(filter));
                    
                    // Filter rows
                    let visibleCount = 0;
                    turnoRows.forEach(row => {
                        const estado = row.getAttribute('data-estado');
                        if (filter === '' || estado === filter) {
                            row.style.display = '';
                            visibleCount++;
                        } else {
                            row.style.display = 'none';
                        }
                    });
                    
                    // Update count
                    if (filter === '') {
                        listCountInfo.innerHTML = 'Total de turnos: <strong>' + visibleCount + '</strong>';
                    } else {
                        listCountInfo.innerHTML = 'Mostrando <strong>' + visibleCount + '</strong> turno(s) con estado: <strong>' + filter + '</strong>';
                    }
                });
            });

            function getButtonColor(filter) {
                switch(filter) {
                    case 'Pendiente': return 'warning';
                    case 'Realizado': return 'success';
                    case 'Cancelado': return 'danger';
                    default: return 'primary';
                }
            }

            function getOriginalColor(btn) {
                const filter = btn.getAttribute('data-filter');
                return getButtonColor(filter);
            }
        });
    </script>
}
