@model AppMascotas.Models.Veterinaria
@{
    ViewData["Title"] = "Editar Información";
}

@section Styles {
    <link rel="stylesheet" href="~/css/mi-veterinaria.css" asp-append-version="true" />
}

<div class="container mt-4 mb-5">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm edit-vet-header">
                <div class="card-body p-4">
                    <div class="d-flex align-items-center">
                        <div class="edit-vet-icon">
                            <i class="fas fa-edit"></i>
                        </div>
                        <div>
                            <h1 class="text-white mb-1 fw-bold">Editar Información</h1>
                            <p class="text-white mb-0 mi-veterinaria-info">Actualiza los datos de tu veterinaria</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Formulario -->
    <div class="row">
        <div class="col-lg-12 mx-auto">
            <div class="card border-0 shadow-sm form-section-card">
                <div class="card-body p-4 p-md-5">
                    <form asp-action="Editar" method="post">
                        <input type="hidden" asp-for="Id" />
                        
                        @if (ViewData.ModelState.ErrorCount > 0)
                        {
                            <div asp-validation-summary="All" class="alert alert-danger alert-rounded"></div>
                        }

                        <div class="row g-4">
                            <!-- Nombre de la Veterinaria -->
                            <div class="col-12">
                                <label asp-for="NombreVeterinaria" class="form-label fw-semibold">
                                    <i class="fas fa-clinic-medical me-2 text-primary"></i>
                                    Nombre de la Veterinaria
                                </label>
                                <input asp-for="NombreVeterinaria" 
                                       class="form-control form-control-lg" 
                                       placeholder="Ej: Veterinaria San Francisco"
                                       style="border-radius: 12px; border: 2px solid #e9ecef;" />
                                <span asp-validation-for="NombreVeterinaria" class="text-danger"></span>
                            </div>

                            <!-- Email (readonly) -->
                            <div class="col-12">
                                <label asp-for="Email" class="form-label fw-semibold">
                                    <i class="fas fa-envelope me-2 text-info"></i>
                                    Correo Electrónico
                                </label>
                                <input asp-for="Email" 
                                       class="form-control form-control-lg" 
                                       placeholder="correo@ejemplo.com" 
                                       readonly
                                       style="border-radius: 12px; border: 2px solid #e9ecef; background-color: #f8f9fa;" />
                                <div class="info-badge mt-2">
                                    <small>
                                        <i class="fas fa-info-circle me-2 text-info"></i>
                                        El email no se puede modificar ya que es tu nombre de usuario
                                    </small>
                                </div>
                            </div>

                            <!-- Teléfono -->
                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label fw-semibold">
                                    <i class="fas fa-phone me-2 text-success"></i>
                                    Teléfono
                                </label>
                                <input asp-for="PhoneNumber" 
                                       class="form-control form-control-lg" 
                                       placeholder="Ej: 011 4567-8900"
                                       style="border-radius: 12px; border: 2px solid #e9ecef;" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>

                            <!-- Dirección -->
                            <div class="col-md-6">
                                <label asp-for="Direccion" class="form-label fw-semibold">
                                    <i class="fas fa-map-marker-alt me-2 text-danger"></i>
                                    Dirección
                                </label>
                                <input asp-for="Direccion" 
                                       class="form-control form-control-lg" 
                                       placeholder="Ej: Av. Corrientes 1234"
                                       style="border-radius: 12px; border: 2px solid #e9ecef;" />
                                <span asp-validation-for="Direccion" class="text-danger"></span>
                            </div>

                            <!-- Nota informativa -->
                            <div class="col-12">
                                <div class="alert alert-warning alert-rounded">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    <strong>Nota:</strong> Los cambios en la información de tu veterinaria se verán reflejados en toda la plataforma.
                                </div>
                            </div>
                        </div>

                        <!-- Botones -->
                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="d-flex gap-3 justify-content-end">
                                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg btn-rounded">
                                        <i class="fas fa-times me-2"></i>Cancelar
                                    </a>
                                    <button type="submit" class="btn btn-primary btn-lg btn-rounded">
                                        <i class="fas fa-save me-2"></i>Guardar Cambios
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
