@{
    ViewData["Title"] = "Mi Veterinaria";
    var veterinaria = ViewBag.Veterinaria as AppMascotas.Models.Veterinaria;
    var ultimosDuenos = ViewBag.UltimosDuenos as List<AppMascotas.Models.Dueno>;
    var ultimasMascotas = ViewBag.UltimasMascotas as List<AppMascotas.Models.Mascota>;
    var proximosTurnos = ViewBag.ProximosTurnos as List<AppMascotas.Models.Turno>;
}

@section Styles {
    <link rel="stylesheet" href="~/css/mi-veterinaria.css" asp-append-version="true" />
}

<div class="container mt-4 mb-5">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm alert-rounded" role="alert">
            <i class="fas fa-check-circle me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Header con diseño moderno -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm mi-veterinaria-header">
                <div class="card-body p-4">
                    <div class="row align-items-center">
                        <div class="col-lg-8">
                            <div class="d-flex align-items-center">
                                <div class="mi-veterinaria-header-icon">
                                    <i class="fas fa-clinic-medical"></i>
                                </div>
                                <div>
                                    <h2 class="text-white mb-2 fw-bold">@(veterinaria?.NombreVeterinaria ?? "")</h2>
                                    <div class="text-white mi-veterinaria-info">
                                        <p class="mb-1">
                                            <i class="fas fa-envelope me-2"></i>
                                            @(veterinaria?.Email ?? "")
                                        </p>
                                        @if (!string.IsNullOrEmpty(veterinaria?.PhoneNumber))
                                        {
                                            <p class="mb-1">
                                                <i class="fas fa-phone me-2"></i>
                                                @veterinaria.PhoneNumber
                                            </p>
                                        }
                                        @if (!string.IsNullOrEmpty(veterinaria?.Direccion))
                                        {
                                            <p class="mb-0">
                                                <i class="fas fa-map-marker-alt me-2"></i>
                                                @veterinaria.Direccion
                                            </p>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 text-lg-end mt-3 mt-lg-0">
                            <a asp-action="Edit" class="btn btn-light btn-lg shadow-sm btn-rounded-lg">
                                <i class="fas fa-edit me-2"></i>Editar Información
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Stats -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100 stat-card">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <p class="text-muted mb-1 small">Total Dueños</p>
                            <h2 class="fw-bold mb-0 display-6">@ViewBag.TotalDuenos</h2>
                        </div>
                        <div class="stat-icon-wrapper stat-icon-primary">
                            <i class="fas fa-users"></i>
                        </div>
                    </div>
                    <a asp-controller="Duenos" asp-action="Index" class="btn btn-outline-primary w-100 btn-rounded">
                        Ver Todos
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100 stat-card">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <p class="text-muted mb-1 small">Total Mascotas</p>
                            <h2 class="fw-bold mb-0 display-6">@ViewBag.TotalMascotas</h2>
                        </div>
                        <div class="stat-icon-wrapper stat-icon-success">
                            <i class="fas fa-paw"></i>
                        </div>
                    </div>
                    <a asp-controller="Mascotas" asp-action="Index" class="btn btn-outline-success w-100 btn-rounded">
                        Ver Todas
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100 stat-card">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <p class="text-muted mb-1 small">Turnos Pendientes</p>
                            <h2 class="fw-bold mb-0 display-6">@ViewBag.TurnosPendientes</h2>
                        </div>
                        <div class="stat-icon-wrapper stat-icon-info">
                            <i class="fas fa-calendar-check"></i>
                        </div>
                    </div>
                    <a asp-controller="Turnos" asp-action="Index" class="btn btn-outline-info w-100 btn-rounded">
                        Ver Agenda
                    </a>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-0 shadow-sm h-100 stat-card">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <p class="text-muted mb-1 small">Turnos Hoy</p>
                            <h2 class="fw-bold mb-0 display-6">@ViewBag.TurnosHoy</h2>
                        </div>
                        <div class="stat-icon-wrapper stat-icon-warning">
                            <i class="fas fa-calendar-day"></i>
                        </div>
                    </div>
                    <p class="text-muted small mb-0">
                        <i class="fas fa-calendar me-1"></i>
                        @DateTime.Today.ToString("dd/MM/yyyy")
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Content -->
    <div class="row">
        <div class="col-lg-8">
            <!-- Accesos Rápidos -->
            <div class="card border-0 shadow-sm mb-4 content-card">
                <div class="card-body p-4">
                    <h5 class="mb-4 fw-bold">
                        <i class="fas fa-bolt me-2 text-warning"></i>
                        Accesos Rápidos
                    </h5>
                    <div class="row g-3">
                        <div class="col-md-4">
                            <a asp-controller="Duenos" asp-action="Create" class="btn btn-outline-primary w-100 quick-access-btn">
                                <i class="fas fa-user-plus me-2"></i>Nuevo Dueño
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-controller="Mascotas" asp-action="Create" class="btn btn-outline-success w-100 quick-access-btn">
                                <i class="fas fa-plus me-2"></i>Nueva Mascota
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-controller="Turnos" asp-action="Create" class="btn btn-outline-info w-100 quick-access-btn">
                                <i class="fas fa-calendar-plus me-2"></i>Agendar Turno
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Próximos Turnos -->
            <div class="card border-0 shadow-sm mb-4 content-card">
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="mb-0 fw-bold">
                            <i class="fas fa-calendar-alt me-2 text-info"></i>
                            Próximos Turnos
                        </h5>
                        <a asp-controller="Turnos" asp-action="Index" class="btn btn-sm btn-outline-info btn-rounded-sm">
                            Ver Todos
                        </a>
                    </div>
                    @if (proximosTurnos != null && proximosTurnos.Any())
                    {
                        foreach (var turno in proximosTurnos)
                        {
                            <div class="turno-item">
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h6 class="fw-bold mb-1">@(turno.Mascota?.Nombre ?? "Sin mascota")</h6>
                                        <p class="text-muted small mb-0">@(turno.Mascota?.Dueno?.NombreCompleto ?? "Sin dueño")</p>
                                    </div>
                                    <div class="text-end">
                                        <span class="badge bg-info">@turno.Estado</span>
                                        <p class="text-muted small mb-0">@turno.FechaHora.ToString("dd/MM HH:mm")</p>
                                    </div>
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-center text-muted">No hay turnos próximos</p>
                    }
                </div>
            </div>

            <!-- Últimas Mascotas -->
            <div class="card border-0 shadow-sm mb-4 content-card">
                <div class="card-body p-4">
                    <h5 class="mb-4 fw-bold">
                        <i class="fas fa-paw me-2 text-success"></i>
                        Últimas Mascotas
                    </h5>
                    @if (ultimasMascotas != null && ultimasMascotas.Any())
                    {
                        <div class="row g-3">
                            @foreach (var mascota in ultimasMascotas)
                            {
                                <div class="col-md-6">
                                    <div class="card border mascota-card">
                                        <div class="card-body p-3">
                                            <h6 class="fw-bold mb-1">@mascota.Nombre</h6>
                                            <p class="text-muted small mb-0">@mascota.Especie</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-center text-muted">No hay mascotas</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- Últimos Dueños -->
            <div class="card border-0 shadow-sm mb-4 content-card">
                <div class="card-body p-4">
                    <h5 class="mb-4 fw-bold">
                        <i class="fas fa-users me-2 text-primary"></i>
                        Últimos Dueños
                    </h5>
                    @if (ultimosDuenos != null && ultimosDuenos.Any())
                    {
                        foreach (var dueno in ultimosDuenos)
                        {
                            <div class="mb-3 p-2">
                                <h6 class="mb-1 fw-semibold">@dueno.NombreCompleto</h6>
                                <p class="text-muted small mb-0">@dueno.Telefono</p>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-center text-muted">No hay dueños</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
