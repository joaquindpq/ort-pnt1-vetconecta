@{
    ViewData["Title"] = "Inicio";
}

<!-- Hero Section Reorganizado -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="hero-title">
                    @if (ViewBag.IsAuthenticated == true)
                    {
                        <text>Bienvenido a<br /></text>
                        <span class="brand-highlight">@ViewBag.NombreVeterinaria</span>
                    }
                    else
                    {
                        <text>Bienvenido a<br /></text>
                        <span class="brand-highlight">VetConecta</span>
                    }
                </h1>
                <p class="hero-subtitle">
                    Organizá tus turnos, pacientes y dueños de mascotas desde un solo lugar.
                </p>
                @if (ViewBag.IsAuthenticated == true)
                {
                    <a asp-controller="MiVeterinaria" asp-action="Index" class="btn-comenzar">
                        <span>Comenzar</span>
                        <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Register" class="btn-comenzar">
                        <span>Comenzar</span>
                        <i class="fas fa-arrow-right ms-2"></i>
                    </a>
                }
            </div>
            <div class="col-lg-6 position-relative d-none d-lg-block">
                <div class="hero-image-container">
                    <img src="~/images/mascotas.png" alt="mascotas" class="hero-image" />
                    <div class="paw-prints">
                        <i class="fas fa-paw paw-1"></i>
                        <i class="fas fa-paw paw-2"></i>
                        <i class="fas fa-paw paw-3"></i>
                        <i class="fas fa-paw paw-4"></i>
                        <i class="fas fa-paw paw-5"></i>
                        <i class="fas fa-paw paw-6"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Nueva Forma Section - Más Pequeña -->
<section class="nueva-forma-section-compact">
    <div class="container">
        <div class="text-center">
            <h2 class="nueva-forma-title-compact">
                Una nueva forma de <span class="highlight-text">gestionar tu clínica veterinaria</span>
            </h2>
        </div>
    </div>
</section>

<!-- Servicios Slider Section -->
<section class="servicios-section">
    <div class="container">
        <h2 class="servicios-title text-center mb-5">Nuestros Servicios</h2>
        
        <div class="servicios-slider">
            <div class="servicios-container">
                <!-- Servicio 1: Gestión de Dueños -->
                <div class="servicio-card servicio-card-white">
                    <div class="servicio-icon servicio-icon-yellow">
                        <i class="fas fa-users fa-3x"></i>
                    </div>
                    <h3 class="servicio-titulo">Gestión de dueños</h3>
                    <p class="servicio-descripcion">
                        Registrá y actualizá los datos de los clientes con validaciones automáticas.
                    </p>
                    <a href="/landing-gestion-duenos" class="btn btn-dark btn-sm">
                        Explorar
                    </a>
                    <div class="servicio-iconos-bottom">
                        <i class="fas fa-user"></i>
                        <i class="fas fa-address-book"></i>
                        <i class="fas fa-phone"></i>
                        <i class="fas fa-envelope"></i>
                    </div>
                </div>

                <!-- Servicio 2: Registro de Mascotas -->
                <div class="servicio-card servicio-card-white">
                    <div class="servicio-icon servicio-icon-yellow">
                        <i class="fas fa-paw fa-3x"></i>
                    </div>
                    <h3 class="servicio-titulo">Registro de Mascotas</h3>
                    <p class="servicio-descripcion">
                        Asociá cada mascota con su dueño y mantené su historial médico actualizado.
                    </p>
                    <a href="/landing-registro-mascotas" class="btn btn-outline-dark btn-sm">
                        Explorar
                    </a>
                </div>

                <!-- Servicio 3: Turnos -->
                <div class="servicio-card servicio-card-white">
                    <div class="servicio-icon servicio-icon-yellow">
                        <i class="fas fa-calendar-alt fa-3x"></i>
                    </div>
                    <h3 class="servicio-titulo">Turnos Veterinarios</h3>
                    <p class="servicio-descripcion">
                        Programá y gestioná turnos con validación de horarios desde la web.
                    </p>
                    <a href="/landing-turnos-veterinarios" class="btn btn-outline-dark btn-sm">
                        Explorar
                    </a>
                </div>

                <!-- Servicio 4: Mapa -->
                <div class="servicio-card servicio-card-white">
                    <div class="servicio-icon servicio-icon-yellow">
                        <i class="fas fa-map-marked-alt fa-3x"></i>
                    </div>
                    <h3 class="servicio-titulo">Mapa de Veterinarias</h3>
                    <p class="servicio-descripcion">
                        Encontrá veterinarias cercanas usando geolocalización y mapas interactivos.
                    </p>
                    <a asp-controller="Mapa" asp-action="Index" class="btn btn-outline-dark btn-sm">
                        Explorar
                    </a>
                </div>
            </div>

            <!-- Controles del slider -->
            <div class="slider-controls">
                <button class="slider-btn slider-btn-prev" id="prevBtn">
                    <i class="fas fa-chevron-left"></i>
                </button>
                <button class="slider-btn slider-btn-next" id="nextBtn">
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </div>
    </div>
</section>

<!-- Nueva Sección: ¡Asóciate a VetConecta! -->
<section class="asociate-section">
    <div class="container">
        <!-- Título encima de la card -->
        <div class="asociate-title-container">
            <h2 class="asociate-title-main">¡Asóciate a VetConecta!</h2>
        </div>
        
        <div class="asociate-card">
            <div class="row align-items-center">
                <div class="col-lg-8">
                    <div class="asociate-content">
                        <h3 class="asociate-subtitle">Simplifica la gestión de tu clínica veterinaria</h3>
                        <p class="asociate-description">
                            Centraliza turnos, fichas médicas y datos de tus pacientes en un solo lugar.
                        </p>
                        <div class="asociate-features">
                            <div class="feature-item">
                                <i class="fas fa-check-circle"></i>
                                <span>Administración centralizada</span>
                            </div>
                            <div class="feature-item">
                                <i class="fas fa-check-circle"></i>
                                <span>Historias Clínicas Digitales</span>
                            </div>
                            <div class="feature-item">
                                <i class="fas fa-check-circle"></i>
                                <span>Gestión de Inventario</span>
                            </div>
                        </div>
                        <a asp-controller="Contact" asp-action="Index" class="btn-contactanos">
                            <span>Contáctanos</span>
                            <i class="fas fa-arrow-right"></i>
                        </a>
                    </div>
                </div>
                <div class="col-lg-4 text-center">
                    <div class="asociate-image-container">
                        <img src="~/images/mascotavet.jpg"
                             alt="Veterinaria con perro" 
                             class="asociate-image" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



